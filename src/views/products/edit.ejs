<!DOCTYPE html>
<html lang="es">
<%- include('../partials/head', {
    'title': "Editar producto",
    'css': ["/css/create-products-styles.css"],
}) %>

<body>
    <main>
        <form method="POST" action="/products/edit/<%= product.id %>?_method=PUT " enctype="multipart/form-data">
            <div id="formulary">
                <section class="camp">
                    <p class="label"><label for="name">Nombre del producto:</label></p>
                    <p class="input">
                        <input type="text" value="<%= locals.old && old.name ? old.name : product.name %> " id="name" name="name">
                        <span class="text-danger">
                            <% if (locals.errors && errors.name) { %>
                                <%= errors.name.msg %>
                            <% } %>
                        </span>
                    </p>
                </section>
                <section class="camp">
                    <p class="label"><label for="description">Descripción:</label></p>
                    <p class="input">
                        <input type="text" value="<%= locals.old && old.description ? old.description : product.description %>" id="description" name="description">
                        <span class="text-danger">
                            <% if (locals.errors && errors.description) { %>
                                <%= errors.description.msg %>
                            <% } %>
                        </span>
                    </p>
                </section>
                <section class="camp">
                    <p class="label"><label for="category_id">Categoría:</label></p>
                    <p class="input">
                        <select name="category_id">
                            <% categories.forEach(category => { %>
                                <option
                                    value="<%= category.id %>"
                                    <%= category.id == product.category_id ? 'selected' : '' %>
                                >
                                    <%= category.name %>
                                </option>
                            <% }) %>
                        </select>
                        <span class="text-danger">
                            <% if (locals.errors && errors.category_id) { %>
                                <%= errors.category_id.msg %>
                            <% } %>
                        </span>
                    </p>
                </section>
                <section class="camp">
                    <p class="label"><label for="image">Imagen:</label></p>
                    <p class="input">
                        <input type="file" value="<%= product.image %>" accept= "image/" id="image" name="image">
                        <span class="text-danger">
                            <% if (locals.errors && errors.image) { %>
                                <%= errors.image.msg %>
                            <% } %>
                        </span>
                    </p>
                </section>
                <section class="camp">
                    <p class="label"><label for="price">Precio:</label></p>
                    <p class="input">
                        <input type="number" value="<%= locals.old && old.price ? old.price : product.price %>" id="price" name="price">
                        <span class="text-danger">
                            <% if (locals.errors && errors.price) { %>
                                <%= errors.price.msg %>
                            <% } %>
                        </span>
                    </p>
                </section>
                <section class="camp">
                    <p class="label"><label for="color_id">Color:</label></p>
                    <p class="input">
                        <select name="color_id">
                            <% colors.forEach(color => { %>
                                <option
                                    value="<%= color.id %>"
                                    <%= color.id == product.color_id ? 'selected' : '' %>
                                >
                                    <%= color.name %>
                                </option>
                            <% }) %>
                        </select>
                        <span class="text-danger">
                            <% if (locals.errors && errors.color_id) { %>
                                <%= errors.color_id.msg %>
                            <% } %>
                        </span>
                    </p>
                </section>
                <section class="camp">
                    <p class="label"><label for="size_id">Tamaño:</label></p>
                    <p class="input">
                        <select name="size_id">
                            <% sizes.forEach(size => { %>
                                <option
                                    value="<%= size.id %>"
                                    <%= size.id == product.size_id ? 'selected' : '' %>
                                >
                                    <%= size.name %>
                                </option>
                            <% }) %>
                        </select>
                        <span class="text-danger">
                            <% if (locals.errors && errors.size_id) { %>
                                <%= errors.size_id.msg %>
                            <% } %>
                        </span>
                    </p>
                </section>
                <section class="camp" id="regbutton">
                    <p id="button"><button type="submit">Actualizar</button></p>
                </section>
                </div>
            </form>
            <form method="POST" action="/products/delete/<%= product.id %>?_method=DELETE " enctype="multipart/form-data">
                <section class="camp" id="delbutton">
                    <p id="delbutton"><button type="submit">Eliminar</button></p>
                </section>
            </form>
            <section class="product-list-area">
                <ul class="product-list"></ul>
            </section>
    </main>
    <script src= "/js/productValidation.js"></script>    
</body>
</html>