<!DOCTYPE html>
<html lang="es">
<%- include('../partials/head', {
    'title': "Crear productos",
    'css': ["/css/create-products-styles.css"],
}) %>

<body>
    <main>
        <form method="POST" action="/products/create" enctype="multipart/form-data">
            <div id="formulary">
                <!-- Campos Obligatorios -->
                <section class="camp">
                    <p class="label"><label for="name">Nombre del producto:</label></p>
                    <p class="input"><input type="text" placeholder="Ingresa el nombre del producto" id="name" name="name" required></p>
                </section>
                <section class="camp">
                    <p class="label"><label for="description">Descripción:</label></p>
                    <p class="input"><input type="text" placeholder="Ingresa la descripción" id="description" name="description" required></p>
                </section>
                <section class="camp">
                    <p class="label"><label for="category_id">Categoría:</label></p>
                    <p class="input">
                        <select name="category_id">
                            <% categories.forEach(category => { %>
                                <option value="<%= category.id %>">
                                    <%= category.name %>
                                </option>
                            <% }) %>
                        </select>
                    </p>
                </section>
                <section class="camp">
                    <p class="label"><label for="image">Imagen:</label></p>
                    <p class="input"><input type="file" placeholder="Adjuntar imagen" accept= "image/" id="image" name="image" required></p>
                </section>
                <section class="camp">
                    <p class="label"><label for="price">Precio:</label></p>
                    <p class="input"><input type="number" placeholder="Ingresa el precio" id="price" name="price" required></p>
                </section>
                <!-- Campos Opcionales -->
                <section class="camp">
                    <p class="label"><label for="color_id">Color:</label></p>
                    <p class="input">
                        <select name="color_id">
                            <% colors.forEach(color => { %>
                                <option value="<%= color.id %>">
                                    <%= color.name %>
                                </option>
                            <% }) %>
                        </select>
                    </p>
                </section>
                <section class="camp">
                    <p class="label"><label for="size_id">Tamaño:</label></p>
                    <p class="input">
                        <select name="size_id">
                            <% sizes.forEach(size => { %>
                                <option value="<%= size.id %>">
                                    <%= size.name %>
                                </option>
                            <% }) %>
                        </select>
                    </p>
                </section>
                <section class="camp" id="regbutton">
                    <p id="button"><button type="submit">Cargar</button></p>
                </section>
                </div>
            </form>
            <section class="product-list-area">
                <ul class="product-list"></ul>
            </section>
    </main>
    
</body>
</html>